<body id="body" style="background-image: url(/images/banner1.jpeg);">
  <% include ../nav_bar.ejs %>
  <!-- Contact Form -->
  <div ng-app="memberApp">
    <div ng-controller="memberController">
      <div class="item active" >
        <div class="container">
          <div class="col-sm-12 c-form-box wow fadeInUp">
            <div class="c-form-top">
              <div class="c-form-top-left">

              </div>
            </div>
            <div class="col-sm-offset-3">
              <h3 data-wow-duration="1000ms"> <span class="color"> <b>Members Table</b> </span> </h3>
              <p>________________________________________</p>
              <p>                                       .</p>
            </div>


          </div>
        </div>
      </div>
      <div >

        <div class="col-sm-3">
          <div class="form-group">
            <label>Name:</label>
            <input type="text" ng-blur='ask()' ng-model="name" class="form-control"/>
          </div>
          <div class="form-group">
            <label>Phone</label>
            <input type="text" ng-blur="ask()" ng-model="joiningDate" class="form-control">
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="text" ng-blur="ask()" ng-model="joiningDate" class="form-control">
          </div>
          <div class="form-group">
            <label>Department</label>
            <input type="text" ng-blur="ask()" ng-model="joiningDate" class="form-control">
          </div>
          <div class="form-group">
            <label>Father's name</label>
            <input type="text" ng-blur="ask()" ng-model="joiningDate" class="form-control">
          </div>
          <div class="form-group">
            <label>Corresponding Address</label>
            <input type="text" ng-blur="ask()" ng-model="joiningDate" class="form-control">
          </div>
          <div class="form-group">
            <label>Permanent Address</label>
            <input type="text" ng-blur="ask()" ng-model="joiningDate" class="form-control">
          </div>
          <div class="form-group">
            <label>Gender</label>
            <div>
              <label>Male</label>
              <input type="radio" value="Male" name="gender" />
              <label>Female</label>
              <input type="radio" value="Female" name="gender" />
            </div>
          </div>
          <div class="form-group">
            <label>College</label>
            <input type="text" ng-blur="ask()" ng-model="joiningDate" class="form-control">
          </div>
        </div>
      </div>

      <div class="col-sm-9"><table class="table table-bordered">
        <thead>
          <th>Name</th>
          <th>Joining Date</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Department</th>
          <th>DOB</th>
          <th>Father's name</th>
          <th>Corresponding Address</th>
          <th>Gender</th>
          <th>College</th>
        </thead>
        <tbody>
          <!--<% for (m in members) { %>
          <tr class="active">
          <td><%= members[m].mname %></td>
          <td><%= members[m].joining_date %></td>
          <td><%= members[m].phone %></td>
          <td><%= members[m].email %></td>
          <td><%= members[m].dname %></td>
          <td><%= members[m].date_of_birth %></td>
          <td><%= members[m].father_name %></td>
          <td><%= members[m].corresponding_address %></td>
          <td><%= members[m].gender %></td>
          <td><%= members[m].college %></td>
        </tr>
        <% } %>-->
        <div >
          <tr class="active" ng-repeat="x in memberData">
            <td>{{x.mname}}</td>
            <td>{{x.joining_date}}</td>
            <td>{{x.phone}}</td>
            <td>{{x.email}}</td>
            <td>{{x.dname}}</td>
            <td>{{x.date_of_birth}}</td>
            <td>{{x.father_name}}</td>
            <td>{{x.corresponding_address}}</td>
            <td>{{x.gender}}</td>
            <td>{{x.college}}</td>
          </tr>
        </div>
      </tbody>
    </table>
  </div>
  <!-- Javascript -->
  <script src="/javascripts/jquery-1.11.1.min.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>
  <script src="/javascripts/jquery.backstretch.min.js"></script>
  <script src="/javascripts/wow.min.js"></script>
  <%# <script src="public/js/scripts.js"></script>%>

  <!--[if lt IE 10]>
  <script src="assets/js/placeholder.js"></script>
  <![endif]-->

  <script>
  var app = angular.module('memberApp', []);


  app.controller('memberController', function($scope, $http) {

    $scope.name = '';
    // $scope.joiningDate = new Date();

    $scope.ask = function(){

      let vName = $scope.name;
      let vJoiningDate = $scope.joiningDate;

      let params = {name: vName, joining_date: vJoiningDate};
      let request = {
        method: 'post',
        url: '/member/view_data',
        data: params
      };

      $http(request).then(function(receivedData, status, headers, config) {
        console.log(JSON.stringify(receivedData.data));

        $scope.memberData = receivedData.data;
      });
    }
  });
  </script>
</div>
</div>
</body>
